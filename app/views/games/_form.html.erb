<div class="form-group">
  <%= form_with model: @game, local: true  do |form| %>
    <% if @game.errors.any? %>
      <div id ="error_explanation">
        <h2><%= pluralize(@game.errors.count, 'error') %>
        prohibited game from being started
        </h2>
        <ul>
          <% @game.errors.full_messages.each do |msg|  %>
            <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    <% end %>

  <h3><%= form.label :name, "Player Name:" %></h3>
  <%= form.text_field :name , class: "form-control", autofocus: true %>
  <%= form.submit  "Create Game", class: "submit-btn btn btn-primary btn-lg"%>
<% end %>
</div>